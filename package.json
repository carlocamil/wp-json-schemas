{
  "name": "wp-json-schemas",
  "version": "1.8.1",
  "description": "JSON schemas for WordPress core PHP objects",
  "main": "schema.json",
  "files": [
    "schemas"
  ],
  "homepage": "https://github.com/johnbillion/wp-json-schemas",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnbillion/wp-json-schemas.git"
  },
  "keywords": [
    "schemas",
    "wordpress"
  ],
  "author": "John Blackbourn",
  "license": "MIT",
  "devDependencies": {
    "ajv-cli": "^3.1.0"
  },
  "scripts": {
    "test-post": "ajv validate -s schemas/post.json -d \"tests/data/post/*.json\" -r \"schemas/**/*.json\"",
    "test-user": "ajv validate -s schemas/user.json -d \"tests/data/user/*.json\" -r \"schemas/**/*.json\"",
    "test-tag": "ajv validate -s schemas/term.json -d \"tests/data/tag/*.json\" -r \"schemas/**/*.json\"",
    "test-category": "ajv validate -s schemas/term.json -d \"tests/data/category/*.json\" -r \"schemas/**/*.json\"",
    "test-comment": "ajv validate -s schemas/comment.json -d \"tests/data/comment/*.json\" -r \"schemas/**/*.json\"",
    "test-error": "ajv validate -s schemas/error.json -d \"tests/data/error/*.json\" -r \"schemas/**/*.json\"",
    "test": "npm run validate && npm run test-rest-api-post",
    "test-rest-api-post": "ajv validate -s schemas/rest-api/post.json -d \"tests/rest-api/post/*.json\" -r \"schemas/**/*.json\"",
    "validate": "ajv compile -s schema.json -r \"schemas/**/*.json\""
  }
}
